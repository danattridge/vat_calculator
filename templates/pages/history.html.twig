{# templates/pages/sales.html.twig #}
{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">

        <h1>{{ title }}</h1>

        <div id="sales-history-table" class="block-element"> 
        
            <table>
                <thead>
                    <tr><th>#</th><th>Product Name</th><th>Price per Unit (&pound;)</th><th>Product Qty</th><th>Value ex. VAT (&pound;)</th><th>VAT Rate (&percnt;)</th><th>VAT Amount (&pound;)</th><th>Value inc. VAT (&pound;)</th><th>Customer</th><th>Customer Email</th><th>Created at</th></tr>
                </thead>
                <tbody>
                    {% for sale in sales_history %}
                        <tr><td>{{ sale['saleId'] }}</td><td>{{ sale['productName'] }}</td><td>{{ sale['pricePerUnit'] }}</td><td>{{ sale['productQty'] }}</td><td>{{ sale['totalValueExcVat'] }}</td><td>{{ sale['vatRate'] }}</td><td>{{ sale['vatAmount'] }}</td><td><strong>{{ sale['totalValueIncVat'] }}</strong></td><td>{{ sale['customerName'] }}</td><td>{{ sale['customerEmail'] }}</td><td>{{ sale['createdAt'] }}</td></tr>
                    {% endfor %}
                </tbody>
            </table>

            <a class="button" href="/sales/download" type="submit">Download CSV</button> | <a class="button" href="/sales/delete" type="submit">Delete Records</button>

        </div>

    </div>
{% endblock %}
